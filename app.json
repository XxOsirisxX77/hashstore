{
  "expo": {
    "name": "HashStore",
    "slug": "hashstore",
    "privacy": "public",
    "sdkVersion": "52.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/sukhumvit/SukhumvitSet-Bold.ttf",
            "./assets/fonts/sukhumvit/SukhumvitSet-Light.ttf",
            "./assets/fonts/sukhumvit/SukhumvitSet-Medium.ttf",
            "./assets/fonts/sukhumvit/SukhumvitSet-SemiBold.ttf",
            "./assets/fonts/sukhumvit/SukhumvitSet-Text.ttf",
            "./assets/fonts/sukhumvit/SukhumvitSet-Thin.ttf"
          ]
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.hashstore"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.hashstore"
    },
    "web": {
      "favicon": "./assets/icon.png"
    }
  }
}